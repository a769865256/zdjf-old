<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zdjf.dao.product.productBuyRob">
<select id="selectProductBuyRobPage" resultType="com.zdjf.domain.product.ProductBuyRobVo">
		<trim prefix="select" suffixOverrides=",">
		<include refid="columns"/>
		</trim> 
		from
		zd_product_buy_rob_rob
		where 1=1
		<include refid="conds" />
		order by id desc
		limit #{firstrownum}, #{limit}
	</select>
	<select id="selectProductBuyRobCount" resultType="java.lang.Long">
		select
		count(id)
		from zd_product_buy_rob_rob
		where 1=1
		<include refid="conds" />
	</select>
	<select id="selectProductBuyRobById" resultType="com.zdjf.domain.product.ProductBuyRob">
		<trim prefix="select" suffixOverrides=",">
		<include refid="columns"/>
		</trim> 
		from zd_product_buy_rob_rob
		where 1=1
		and id=#{id}
	</select>
	<select id="deleteProductBuyRobById" parameterType="long">
			delete from zd_product_buy_rob_rob where id=#{id}
	</select>
	<select id="updateProductBuyRobById" parameterType="com.zdjf.domain.product.ProductBuyRob">
		update zd_product_buy_rob
		<trim prefix="set" suffixOverrides=",">
		<if test="id != null and id != ''">    id = #{id},</if>
		<if test="buy_id != null and buy_id != ''">    buy_id = #{buy_id},</if>
		<if test="user_id != null and user_id != ''">    user_id = #{user_id},</if>
		<if test="product_id != null and product_id != ''">    product_id = #{product_id},</if>
		<if test="rob_type != null and rob_type != ''">    rob_type = #{rob_type},</if>
		<if test="coin != null and coin != ''">    coin = #{coin},</if>
		<if test="create_time != null">    create_time = #{create_time},</if>
		<if test="remark != null and remark != ''">    remark = #{remark},</if>
		</trim>
		where 1=1
		and id=#{id}
	</select>
</mapper>