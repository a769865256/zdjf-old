<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zdjf.dao.fund.coinGoods">
	<select id="selectCoinGoodsPage" resultType="com.zdjf.domain.fund.CoinGoods">
		<trim prefix="select" suffixOverrides=",">
		<include refid="columns"/>
		</trim> 
		from
		zd_coin_goods
		where 1=1
		<include refid="conds" />
		order by id desc
		limit #{firstrownum}, #{limit}
	</select>
	<select id="selectCoinGoodsCount" resultType="java.lang.Long">
		select
		count(id)
		from zd_coin_goods
		where 1=1
		<include refid="conds" />
	</select>
	<select id="selectExchangePage" resultType="com.zdjf.domain.fund.CoinGoods">
		<trim prefix="select" suffixOverrides=",">
		<include refid="columns"/>
		</trim> 
		from
		zd_coin_goods
		where 1=1
		and goods_type=${goods_type}
		order by id desc
		limit #{firstrownum}, #{limit}
	</select>
	<select id="selectExchangeCount" resultType="java.lang.Long">
		select
		count(id)
		from zd_coin_goods
		where 1=1
		and goods_type=${goods_type}
	</select>
	
	<select id="selectCoinGoodsById" resultType="com.zdjf.domain.fund.CoinGoods">
		<trim prefix="select" suffixOverrides=",">
		<include refid="columns"/>
		</trim> 
		from zd_coin_goods
		where 1=1
		and id=#{id}
	</select>
	
	<select id="updateCoinGoodsById" parameterType="com.zdjf.domain.fund.CoinGoods">
		update zd_coin_goods
		<trim prefix="set" suffixOverrides=",">
		<if test="id != null and id != ''"> id = #{id},</if>
		<if test="goods_name != null and goods_name != ''"> goods_name = #{goods_name},</if>
		<if test="coin_cost != null and coin_cost != ''"> coin_cost = #{coin_cost},</if>
		<if test="goods_type != null and goods_type != ''"> goods_type = #{goods_type},</if>
		<if test="exchange_name != null and exchange_name != ''"> exchange_name = #{exchange_name},</if>
		<if test="amount != null and amount != ''"> amount = #{amount},</if>
		<if test="max_count != null and max_count != ''"> max_count = #{max_count},</if>
		<if test="status != null and status != ''"> status = #{status},</if>
		<if test="order_num != null and order_num != ''"> order_num = #{order_num},</if>
		<if test="des != null and des != ''"> des = #{des},</if>
		<if test="remark != null and remark != ''"> remark = #{remark},</if>
		<if test="goods_number != null and goods_number != ''"> goods_number = #{goods_number},</if>
		<if test="relation_id != null and relation_id != ''"> relation_id = #{relation_id},</if>
		<if test="create_time != null"> create_time = #{create_time},</if>
		<if test="update_time != null"> update_time = #{update_time},</if>
		<if test="investment_quota != null and investment_quota != ''"> investment_quota = #{investment_quota},</if>
		<if test="min_day != null and min_day != ''"> min_day = #{min_day},</if>
		<if test="effective_day != null and effective_day != ''"> effective_day = #{effective_day},</if>
		<if test="use_type != null and use_type != ''">    use_type,</if>
		</trim>
		where 1=1
		and id=#{id}
	</select>
	<select id="deleteCoinGoodsById" parameterType="long">
			delete from zd_coin_goods where id=#{id}
	</select>
</mapper>