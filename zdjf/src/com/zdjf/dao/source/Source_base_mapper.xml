<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zdjf.dao.source.source">
	<sql id="columns">
	id,
	source_platform,
	source_code,
	source_name,
	source_url,
	create_time,
	remark,
	source_id
	</sql>
	<sql id="columnsA">
	<if test="id != null and id != ''">  id,</if>
	<if test="source_platform != null and source_platform != ''">  source_platform,</if>
	<if test="source_code != null and source_code != ''">  source_code,</if>
	<if test="source_name != null and source_name != ''">  source_name,</if>
	<if test="source_url != null and source_url != ''">  source_url,</if>
	<if test="create_time != null">  create_time,</if>
	<if test="remark != null and remark != ''">  remark,</if>
	<if test="source_id != null and source_id != ''">  source_id,</if>
	</sql>
	<sql id="vals">
	<if test="id != null and id != ''">  #{id},</if>
	<if test="source_platform != null and source_platform != ''">  #{source_platform},</if>
	<if test="source_code != null and source_code != ''">  #{source_code},</if>
	<if test="source_name != null and source_name != ''">  #{source_name},</if>
	<if test="source_url != null and source_url != ''">  #{source_url},</if>
	<if test="create_time != null">  #{create_time},</if>
	<if test="remark != null and remark != ''">  #{remark},</if>
	<if test="source_id != null and source_id != ''">  #{source_id},</if>
	</sql>
	<sql id="conds">
	<if test="id != null and id != ''">  and id = #{id}</if>
	<if test="source_platform != null and source_platform != ''">  and source_platform = #{source_platform}</if>
	<if test="source_code != null and source_code != ''">  and source_code = #{source_code}</if>
	<if test="source_name != null and source_name != ''">  and source_name = #{source_name}</if>
	<if test="source_url != null and source_url != ''">  and source_url = #{source_url}</if>
	<if test="create_time != null">  and create_time = #{create_time}</if>
	<if test="remark != null and remark != ''">  and remark = #{remark}</if>
	<if test="source_id != null and source_id != ''">  and source_id = #{source_id}</if>
	</sql>
	<insert id="saveSource" parameterType="com.zdjf.domain.source.Source" useGeneratedKeys="true" keyProperty="id">
		<selectKey keyProperty="id" resultType="Long" order="AFTER">
			select last_insert_id()
		</selectKey>
		insert into zd_source (
		<trim  suffixOverrides=",">
		<include refid="columnsA" />
		</trim>) 
		values (
		<trim  suffixOverrides=",">
		<include refid="vals" />
		</trim>)
	</insert>
	<select id="selectSource" resultType="com.zdjf.domain.source.SourceVo">
		<trim prefix="select" suffixOverrides=",">
		<include refid="columns"/>
		</trim> 
		from zd_source
		where 1=1
		<include refid="conds" />
		order by source_code
	</select>
	<delete id="deleteSource">
		delete from zd_source
		where id=#{id}
	</delete>
</mapper>