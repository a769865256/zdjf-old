<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zdjf.dao.user.loaner">
<select id="selectLoanerPage" resultType="java.util.Map">
		<trim prefix="select" suffixOverrides=",">
		<include refid="columns"/>
		</trim> 
		from
		zd_loaner
		where 1=1
		<include refid="conds" />
		order by id desc
		limit #{firstrownum}, #{limit}
	</select>
	<select id="selectLoanerCount" resultType="java.lang.Long">
		select
		count(id)
		from zd_loaner
		where 1=1
		<include refid="conds" />
	</select>
	
	<select id="selectLoanerById" resultType="com.zdjf.domain.user.Loaner">
		<trim prefix="select" suffixOverrides=",">
		<include refid="columns"/>
		</trim> 
		from zd_loaner
		where 1=1
		and id=#{id}
	</select>
	
	<select id="selectLoanerMapById" resultType="java.util.Map">
		<trim prefix="select" suffixOverrides=",">
		<include refid="columns"/>
		</trim> 
		from zd_loaner
		where 1=1
		and id=#{id}
	</select>
	
	<select id="updateLoanerById" parameterType="com.zdjf.domain.user.Loaner">
		update zd_loaner
		<trim prefix="set" suffixOverrides=",">
		<if test="id != null and id != ''">  id = #{id},</if>
		<if test="loaner_type != null and loaner_type != ''">  loaner_type = #{loaner_type},</if>
		<if test="name != null and name != ''">  name = #{name},</if>
		<if test="phone != null and phone != ''">  phone = #{phone},</if>
		<if test="idcard != null and idcard != ''">  idcard = #{idcard},</if>
		<if test="marital != null and marital != ''">  marital = #{marital},</if>
		<if test="address != null and address != ''">  address = #{address},</if>
		<if test="comp_alias != null and comp_alias != ''">  comp_alias = #{comp_alias},</if>
		<if test="comp_name != null and comp_name != ''">  comp_name = #{comp_name},</if>
		<if test="comp_code != null and comp_code != ''">  comp_code = #{comp_code},</if>
		<if test="reg_date != null and reg_date != ''">  reg_date = #{reg_date},</if>
		<if test="reg_money != null and reg_money != ''">  reg_money = #{reg_money},</if>
		<if test="comp_address != null and comp_address != ''">  comp_address = #{comp_address},</if>
		<if test="status != null and status != ''">  status = #{status},</if>
		<if test="create_time != null">  create_time = #{create_time},</if>
		<if test="remark != null and remark != ''">  remark = #{remark},</if>
		<if test="user_id != null and user_id != ''">  user_id = #{user_id},</if>
		</trim>
		where 1=1
		and id=#{id}
	</select>
	<select id="deleteLoanerById" parameterType="long">
			delete from zd_loaner where id=#{id}
	</select>
</mapper>